<?xml version="1.0" encoding="UTF-8"?>

<resources>

    <!-- A no-op theme used on devices that are on less than API 31. -->
    <style name="PalaceTheme.Splash" parent="PalaceTheme.WithoutActionBar" />

    <style name="PalaceTheme.WithActionBar" parent="Theme.Material3.DayNight">
        <item name="android:windowBackground">@color/PalaceScreenBackgroundColor</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

        <!-- https://github.com/material-components/material-components-android/blob/master/docs/theming/Color.md#using-the-color-theming-system -->
        <item name="colorPrimary">@color/PalaceGrey0</item>
        <item name="colorPrimaryVariant">@color/PalaceGrey0</item>
        <item name="colorOnPrimary">@color/PalaceGrey3</item>
        <item name="colorSurface">@color/PalaceGrey3</item>
        <item name="colorSecondary">@color/PalaceGrey3</item>
        <item name="colorSecondaryVariant">@color/PalaceGrey3</item>
        <item name="colorOnSecondary">@color/PalaceGrey0</item>
        <item name="colorOnBackground">@color/PalaceGrey0</item>
        <item name="colorError">@color/PalaceError</item>
        <item name="colorOnError">@color/PalaceGrey3</item>

        <!-- The color accent for legacy non-Material components. -->
        <item name="colorAccent">@color/PalaceTextColor</item>

        <item name="android:buttonStyle">@style/Palace.Button.Outlined.Medium</item>
        <item name="android:statusBarColor">@color/PalaceStatusBarColor</item>
        <item name="android:textViewStyle">@style/Palace.TextViewStyle</item>
        <item name="bottomNavigationStyle">@style/Palace.BottomNavigationView</item>
        <item name="checkboxStyle">@style/Palace.Checkbox</item>
        <item name="circularProgressIndicatorStyle">@style/Palace.CircularProgressIndicator</item>
        <item name="linearProgressIndicatorStyle">@style/Palace.LinearProgressIndicator</item>
        <item name="materialAlertDialogTheme">@style/Palace.MaterialAlertDialog.Overlay</item>
        <item name="materialButtonOutlinedStyle">@style/Palace.Button.Outlined</item>
        <item name="materialButtonStyle">@style/Palace.Button.Outlined</item>
        <item name="searchViewStyle">@style/Palace.SearchView</item>
        <item name="switchStyle">@style/Palace.Switch</item>
        <item name="tabStyle">@style/Palace.TabLayout</item>
        <item name="textInputStyle">@style/Palace.TextInputLayout</item>
        <item name="toolbarStyle">@style/Palace.Toolbar</item>
        <item name="chipStyle">@style/Palace.Chip</item>
    </style>

    <style name="PalaceTheme.WithoutActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/PalaceScreenBackgroundColor</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

        <!-- https://github.com/material-components/material-components-android/blob/master/docs/theming/Color.md#using-the-color-theming-system -->
        <item name="colorPrimary">@color/PalaceGrey0</item>
        <item name="colorPrimaryVariant">@color/PalaceGrey0</item>
        <item name="colorOnPrimary">@color/PalaceGrey3</item>
        <item name="colorSurface">@color/PalaceGrey3</item>
        <item name="colorSecondary">@color/PalaceGrey3</item>
        <item name="colorSecondaryVariant">@color/PalaceGrey3</item>
        <item name="colorOnSecondary">@color/PalaceGrey0</item>
        <item name="colorOnBackground">@color/PalaceGrey0</item>
        <item name="colorError">@color/PalaceError</item>
        <item name="colorOnError">@color/PalaceGrey3</item>

        <!-- The color accent for legacy non-Material components. -->
        <item name="colorAccent">@color/PalaceTextColor</item>

        <item name="android:buttonStyle">@style/Palace.Button.Outlined.Medium</item>
        <item name="android:statusBarColor">@color/PalaceStatusBarColor</item>
        <item name="android:textViewStyle">@style/Palace.TextViewStyle</item>
        <item name="bottomNavigationStyle">@style/Palace.BottomNavigationView</item>
        <item name="checkboxStyle">@style/Palace.Checkbox</item>
        <item name="circularProgressIndicatorStyle">@style/Palace.CircularProgressIndicator</item>
        <item name="linearProgressIndicatorStyle">@style/Palace.LinearProgressIndicator</item>
        <item name="materialAlertDialogTheme">@style/Palace.MaterialAlertDialog.Overlay</item>
        <item name="materialButtonOutlinedStyle">@style/Palace.Button.Outlined</item>
        <item name="materialButtonStyle">@style/Palace.Button.Outlined</item>
        <item name="searchViewStyle">@style/Palace.SearchView</item>
        <item name="switchStyle">@style/Palace.Switch</item>
        <item name="tabStyle">@style/Palace.TabLayout</item>
        <item name="textInputStyle">@style/Palace.TextInputLayout</item>
        <item name="toolbarStyle">@style/Palace.Toolbar</item>
        <item name="chipStyle">@style/Palace.Chip</item>
    </style>

</resources>
