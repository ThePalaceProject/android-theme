<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip0" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip1" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip2" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip3" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip4" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip5" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip6" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip7" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip8" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip9" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip10" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip11" />

            <com.google.android.material.chip.Chip
                app:chipIcon="@drawable/palace_facet_chip_select"
                app:chipIconEnabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip12" />
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PalaceInvertedBackgroundColor"
            android:orientation="vertical"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/progressBar0"
                style="@style/Palace.Legacy.LinearProgressIndicator.Inverted"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:progress="50" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="@style/Palace.Legacy.LinearProgressIndicator.Inverted"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:indeterminate="true" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@style/Palace.Legacy.CircularProgressIndicator.Inverted"
                android:layout_width="64dp"
                android:layout_height="64dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Hint"
            android:inputType="text"
            android:text="Edit 0" />

        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Hint"
            android:inputType="text"
            android:text="Edit 1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/authBasicUserLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/authBasicUserField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:hint="Hint"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/authBasicPassLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/authBasicPassField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:hint="Hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="256dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="Switch" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch2"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="SwitchMaterial" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch3"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="SwitchCompat" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="CheckBox" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="256dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:padding="16dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:text="Legacy"
                    android:textSize="18sp" />

                <TextView
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:text="Material"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:indeterminate="true" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:indeterminate="true" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:indeterminate="true" />

            </TableRow>
        </TableLayout>

    </LinearLayout>


</ScrollView>

